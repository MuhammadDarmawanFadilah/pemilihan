# ==========================================
# ALUMNI SYSTEM - FRONTEND ENVIRONMENT
# ==========================================

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:8080/api
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_BACKEND_URL=http://localhost:8080

# Auth Configuration
NEXT_PUBLIC_AUTH_LOGIN_ENDPOINT=/api/auth/login
NEXTAUTH_SECRET=your-nextauth-secret-key-development-2024
NEXTAUTH_URL=http://localhost:3000

# Network Filter Configuration (Development)
NEXT_PUBLIC_NETWORK_FILTER_ENABLED=true
NEXT_PUBLIC_SHOW_ONLY_BACKEND_CALLS=true
NEXT_PUBLIC_ALLOWED_DOMAINS=localhost:8080
NEXT_PUBLIC_USE_PROXY=false

# Development Settings
NEXT_PUBLIC_LOG_LEVEL=debug
NEXT_PUBLIC_ENABLE_NETWORK_DEBUG=true
NODE_ENV=development

# File Upload Configuration (Backend handles all file storage)
NEXT_PUBLIC_IMAGE_UPLOAD_ENDPOINT=/api/images/upload
NEXT_PUBLIC_IMAGE_SERVE_ENDPOINT=/api/images
NEXT_PUBLIC_PLACEHOLDER_IMAGE_ENDPOINT=/api/placeholder
NEXT_PUBLIC_DOCUMENT_DOWNLOAD_ENDPOINT=/api/documents

# Temporary File Configuration
NEXT_PUBLIC_TEMP_FILE_UPLOAD_ENDPOINT=/api/temp-files/upload
NEXT_PUBLIC_TEMP_FILE_PREVIEW_ENDPOINT=/api/temp-files/preview
NEXT_PUBLIC_TEMP_FILE_DOWNLOAD_ENDPOINT=/api/temp-files/download
NEXT_PUBLIC_TEMP_FILE_DELETE_ENDPOINT=/api/temp-files
NEXT_PUBLIC_TEMP_FILE_BULK_DELETE_ENDPOINT=/api/temp-files/bulk
NEXT_PUBLIC_TEMP_FILE_CLEANUP_ENDPOINT=/api/temp-files/cleanup

# File Size Limits (retrieved from backend config)
NEXT_PUBLIC_MAX_IMAGE_SIZE=10485760
NEXT_PUBLIC_MAX_FILE_SIZE=52428800

# File Type Validation (retrieved from backend config)
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Pagination Configuration
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=10
NEXT_PUBLIC_DEFAULT_PAGE=0

# Birthday Notification Configuration
NEXT_PUBLIC_BIRTHDAY_UPCOMING_DAYS=30

# Notification Messages
NEXT_PUBLIC_NOTIFICATION_ALL_CREATED_MSG=Semua notifikasi telah berhasil dibuat untuk alumni
NEXT_PUBLIC_NOTIFICATION_TODAY_SENT_MSG=Semua notifikasi hari ini telah berhasil dikirim
NEXT_PUBLIC_NOTIFICATION_RESENT_MSG=Notifikasi ulang tahun telah dikirim ulang
NEXT_PUBLIC_NOTIFICATION_EXCLUDED_MSG=Alumni dikecualikan dari notifikasi otomatis

# Maps Configuration (Optional - untuk fitur peta alumni)
NEXT_PUBLIC_MAPBOX_TOKEN=your-mapbox-token-here

# Payment Configuration (jika ada)
NEXT_PUBLIC_PAYMENT_PREFIX=PAY-
NEXT_PUBLIC_PAYMENT_ID_LENGTH=8
