# ==========================================
# TRENSILAPOR SYSTEM - PRODUCTION ENVIRONMENT  
# ==========================================

# API Configuration - Production (different port to avoid conflict with Absenkantor)
NEXT_PUBLIC_API_URL=https://trensilapor.my.id/api
NEXT_PUBLIC_BASE_URL=https://trensilapor.my.id
NEXT_PUBLIC_BACKEND_URL=https://trensilapor.my.id

# Auth Configuration
NEXT_PUBLIC_AUTH_LOGIN_ENDPOINT=/api/auth/login
NEXTAUTH_SECRET=trensilapor-nextauth-secret-2025
NEXTAUTH_URL=https://trensilapor.my.id

# Network Filter Configuration (Production)
NEXT_PUBLIC_NETWORK_FILTER_ENABLED=false
NEXT_PUBLIC_SHOW_ONLY_BACKEND_CALLS=false
NEXT_PUBLIC_ALLOWED_DOMAINS=trensilapor.my.id
NEXT_PUBLIC_USE_PROXY=false

# Production Settings
NEXT_PUBLIC_LOG_LEVEL=error
NEXT_PUBLIC_ENABLE_NETWORK_DEBUG=false
NODE_ENV=production
DISABLE_ESLINT_PLUGIN=true

# PWA Configuration (compatible with Absenkantor)
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_PWA_SERVICE_WORKER_SCOPE=/


# File Upload Configuration (Backend handles all file storage)
NEXT_PUBLIC_IMAGE_UPLOAD_ENDPOINT=/api/images/upload
NEXT_PUBLIC_IMAGE_SERVE_ENDPOINT=/api/images
NEXT_PUBLIC_PLACEHOLDER_IMAGE_ENDPOINT=/api/placeholder
NEXT_PUBLIC_DOCUMENT_DOWNLOAD_ENDPOINT=/api/documents

# Temporary File Configuration
NEXT_PUBLIC_TEMP_FILE_UPLOAD_ENDPOINT=/api/temp-files/upload
NEXT_PUBLIC_TEMP_FILE_PREVIEW_ENDPOINT=/api/temp-files/preview
NEXT_PUBLIC_TEMP_FILE_DOWNLOAD_ENDPOINT=/api/temp-files/download
NEXT_PUBLIC_TEMP_FILE_DELETE_ENDPOINT=/api/temp-files
NEXT_PUBLIC_TEMP_FILE_BULK_DELETE_ENDPOINT=/api/temp-files/bulk
NEXT_PUBLIC_TEMP_FILE_CLEANUP_ENDPOINT=/api/temp-files/cleanup

# File Size Limits (retrieved from backend config)
NEXT_PUBLIC_MAX_IMAGE_SIZE=10485760
NEXT_PUBLIC_MAX_FILE_SIZE=52428800

# File Type Validation (retrieved from backend config)
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/plain,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# Pagination Configuration
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=10
NEXT_PUBLIC_DEFAULT_PAGE=0

# Notification Messages (Bawaslu specific)
NEXT_PUBLIC_NOTIFICATION_ALL_CREATED_MSG=Semua notifikasi telah berhasil dibuat untuk laporan
NEXT_PUBLIC_NOTIFICATION_TODAY_SENT_MSG=Semua notifikasi hari ini telah berhasil dikirim
NEXT_PUBLIC_NOTIFICATION_RESENT_MSG=Notifikasi telah dikirim ulang
NEXT_PUBLIC_NOTIFICATION_EXCLUDED_MSG=Pengguna dikecualikan dari notifikasi otomatis
NEXT_PUBLIC_SYSTEM_NAME=Sistem Pemilihan Bawaslu

# Deployment Configuration (different from Absenkantor to avoid conflict)
NEXT_PUBLIC_SERVICE_PORT=3005
NEXT_PUBLIC_DEPLOYMENT_ENV=production
NEXT_PUBLIC_APP_NAME=trensilapor
NEXT_PUBLIC_SERVICE_NAME=trensilapor-frontend

# Maps Configuration (Optional - untuk fitur peta lokasi TPS)
NEXT_PUBLIC_MAPBOX_TOKEN=your-mapbox-token-here

# Report Configuration (untuk sistem pelaporan)
NEXT_PUBLIC_REPORT_PREFIX=RPT-
NEXT_PUBLIC_REPORT_ID_LENGTH=8
